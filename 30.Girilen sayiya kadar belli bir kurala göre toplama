#include <iostream>
#include<string>
#include<cmath>
using namespace std;
int main()
{
	
	int baslangic, bitis, adim;
	int toplam;

	cout << "baslangic degerini giriniz:";
	cin >> baslangic;

	cout << "bitis degerini giriniz:";
	cin >> bitis;

	cout << "adimi giriniz:";
	cin >> adim;

	for (int i = baslangic; i<=bitis; i+=adim)
	{
		toplam += i;
	}
	cout << "toplam=" << toplam;
}
